<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/image_rond"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/pastille_couleur_salle"
        android:src="@drawable/ic_baseline_brightness_1_24"
        app:srcCompat="@drawable/ic_baseline_brightness_1_24" />

    <TextView
        android:id="@+id/reunion_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/button_delete"
        android:layout_toEndOf="@+id/image_rond"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/sujet"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/reunion_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reunion_subject"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/image_rond"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/salle"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <TextView
        android:id="@+id/reunion_indent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reunion_subject"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/reunion_room"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/indent"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <TextView
        android:id="@+id/reunion_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reunion_subject"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/button_delete"
        android:layout_toEndOf="@+id/reunion_indent"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/date"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <TextView
        android:id="@+id/reunion_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reunion_date"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/button_delete"
        android:layout_toEndOf="@+id/image_rond"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/liste_des_participants"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_delete_24" />

</RelativeLayout>